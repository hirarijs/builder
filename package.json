{
  "name": "@hirarijs/builder",
  "version": "1.0.0",
  "description": "A simple wrapper around esbuild to use tsconfig.json directly, like tsc.",
  "main": "dist/index.js",
  "scripts": {
    "test": "node dist/index.js -p test/tsconfig.json",
    "build": "tsc",
    "prepublishOnly": "yarn build"
  },
  "keywords": [
    "esbuild",
    "typescript",
    "builder",
    "tsconfig"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "types": "dist/index.d.ts",
  "bin": {
    "esb": "dist/index.js"
  },
  "packageManager": "yarn@4.12.0",
  "dependencies": {
    "cac": "^6.7.14",
    "esbuild": "^0.27.2",
    "glob": "^13.0.0",
    "jsonc-parser": "^3.3.1",
    "strip-json-comments": "^5.0.3",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  }
}
